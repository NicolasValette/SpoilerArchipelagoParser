<UserControl x:Class="NoNiDev.ArchipelagoParser.Views.APIConnect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:draw="clr-namespace:System.Drawing;assembly=System.Drawing"
             xmlns:local="clr-namespace:NoNiDev.ArchipelagoParser.Views"
             xmlns:conv="clr-namespace:NoNiDev.ArchipelagoParser.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:IconToImageSourceConverter x:Key="IconToImageSourceConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
                Source="{Binding Source={x:Static draw:SystemIcons.Warning},Converter={StaticResource IconToImageSourceConverter},Mode=OneWay}"
               HorizontalAlignment="Left" VerticalAlignment="Top" Height="15" Width="15" />
        <Label Grid.Row="0"
               Content="API URL : " 
               HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Grid.Row="1"
            Text="{Binding ApiURL}" />
        <TextBlock Grid.Row="2" 
            Text="{Binding RequestResponse}" />
      
    </Grid>
</UserControl>
