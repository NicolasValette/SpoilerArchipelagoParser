<UserControl x:Class="NoNiDev.ArchipelagoParser.Views.APIConnect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:draw="clr-namespace:System.Drawing;assembly=System.Drawing"
             xmlns:local="clr-namespace:NoNiDev.ArchipelagoParser.Views"
             xmlns:conv="clr-namespace:NoNiDev.ArchipelagoParser.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:IconToImageSourceConverter x:Key="IconToImageSourceConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">

            <Label Content="API URL : "/>
            <TextBox Text="{Binding ApiURL}" />
            <TextBlock Text="{Binding RequestResponse}" />

        </StackPanel>
    </Grid>
</UserControl>
