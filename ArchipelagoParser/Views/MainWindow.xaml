<Window x:Class="NoNiDev.ArchipelagoParser.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoNiDev.ArchipelagoParser.Views"
        mc:Ignorable="d"
        Title="Archipelago Parser" Height="720" Width="1280">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Row 0-->
        <local:OpenFileButton/>
        <!-- Row 2-->
        <TabControl Grid.Row ="2" Margin="0,5,0,5">
            <TabItem Header="RandoStats">
                <local:RandoStatsView />
            </TabItem>
            <TabItem Header="SOHAR">
                <local:SOHARView Loaded="SOHARView_Loaded"/>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
