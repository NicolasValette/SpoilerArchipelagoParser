<UserControl x:Class="NoNiDev.ArchipelagoParser.Views.CustomUserControl.CustomProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoNiDev.ArchipelagoParser.Views.CustomUserControl"
              xmlns:conv="clr-namespace:NoNiDev.ArchipelagoParser.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:BooleanToCollapsedVisibilityConverter x:Key="BooleanToCollapsedVisibility"/>
    </UserControl.Resources>

    <Grid>
        <StatusBar VerticalAlignment="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <Label Content="{Binding StatusBarText}" Margin="5,0,5,0"/>
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <ProgressBar   Height="10" Width="100"
                Minimum="0" Maximum="100" IsIndeterminate="True" Visibility="{Binding IsAPICallInPrgress, Converter={StaticResource BooleanToCollapsedVisibility}}" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="3">
                <Label Content="{Binding ApiCallName}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
