<UserControl x:Class="NoNiDev.ArchipelagoParser.Views.RandoStatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:draw="clr-namespace:System.Drawing;assembly=System.Drawing"
                xmlns:conv="clr-namespace:NoNiDev.ArchipelagoParser.Converter"
             xmlns:local="clr-namespace:NoNiDev.ArchipelagoParser.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:IconToImageSourceConverter x:Key="IconToImageSource"/>
        <conv:BooleanToCollapsedVisibilityConverter x:Key="BooleanToCollapsedVisibility"/>
        <conv:BooleanToHiddenVisibilityConverter x:Key="BooleanToHiddenVisibility"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <!-- label requete ?<RowDefinition Height="auto" />-->
        </Grid.RowDefinitions>
        <!-- 0 -->
        <local:APIConnect Grid.Row="0" 
                                      DataContext="{Binding RandoStatAPIVM}"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" >
            
            <ListBox ItemsSource="{Binding Players}" HorizontalContentAlignment="Stretch">
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:RandoSlotView HorizontalContentAlignment="Stretch" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>



        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">

            <Button  Command="{Binding ButtonAddJoueurRC}" Content="Ajouter un joueur" Height="20" Width="150" Margin="15,5,15,5" />
            <Button  Content="Ajouter le(s) jeu(x)" Height="20" Width="150" Margin="15,5,15,5" Visibility="{Binding IsAddJeuVisible, Converter={StaticResource BooleanToCollapsedVisibility}}" />

        </StackPanel>
        
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0"
                   Content="Nom de l'archipel : " />
            <TextBox Grid.Row="0" Grid.Column="1"
                     Text="{Binding ArchipelName}" Margin="5"/>
            <Label Grid.Row="1" Grid.Column="0"
       Content="URL : " />
            <TextBox Grid.Row="1" Grid.Column="1"
         Text="{Binding URL}" Margin="5"/>

        </Grid>
        <Button Grid.Row="4" Command="{Binding ButtonRC}" IsEnabled="{Binding IsEnabled}"
        Background="{Binding StringColor}" Height="20" Width="150" Margin="5,5,5,5" Visibility="{Binding IsReadyToAddArchipel, Converter={StaticResource BooleanToCollapsedVisibility}}">
            <Button.Style>
                <Style TargetType="{x:Type Button}">

                    <!--style commun-->

                    <Setter Property="Background" Value="Red"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsReady}" Value="False">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <Image Grid.Row="0"
                                    Source="{Binding Source={x:Static draw:SystemIcons.Warning},Converter={StaticResource IconToImageSource},Mode=OneWay}"
                                    HorizontalAlignment="Left" VerticalAlignment="Top" Height="15" Width="15" />
                                </Setter.Value>
                            </Setter>

                            <!--style disabled-->

                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsReady}" Value="True">
                            <Setter Property="Content" Value="Ajouter l'archipel"/>

                            <!--style enabled-->

                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <StatusBar Grid.Row="5" VerticalAlignment="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding StatusBarText}" Margin="5,0,5,0"/>
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem Grid.Column="2">
                <ProgressBar   Height="10" Width="100"
                        Minimum="0" Maximum="100" IsIndeterminate="True" Visibility="{Binding IsAPICallInPrgress, Converter={StaticResource BooleanToCollapsedVisibility}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
