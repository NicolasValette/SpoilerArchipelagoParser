<UserControl x:Class="NoNiDev.ArchipelagoParser.Views.RandoStatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:draw="clr-namespace:System.Drawing;assembly=System.Drawing"
xmlns:conv="clr-namespace:NoNiDev.ArchipelagoParser.Converter"
             xmlns:local="clr-namespace:NoNiDev.ArchipelagoParser.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:IconToImageSourceConverter x:Key="IconToImageSourceConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- 0 -->
        <ListBox Grid.Column="0" ItemsSource="{Binding Players}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:RandoSlotView HorizontalContentAlignment="Stretch" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" Grid.Row="0">
            <local:APIConnect  DataContext="{Binding RandoStatAPIVM}"/>
            <Button Command="{Binding ButtonRC}" IsEnabled="{Binding IsEnabled}"
                Background="{Binding StringColor}" >
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <!-- style commun -->
                        <Setter Property="Background" Value="Red"/>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsReady}" Value="False">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Image Grid.Row="0"
                                            Source="{Binding Source={x:Static draw:SystemIcons.Warning},Converter={StaticResource IconToImageSourceConverter},Mode=OneWay}"
                                            HorizontalAlignment="Left" VerticalAlignment="Top" Height="15" Width="15" />
                                    </Setter.Value>
                                </Setter>
                                <!-- style disabled -->
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsReady}" Value="True">
                                <Setter Property="Content" Value="GO"/>
                                <!-- style enabled -->
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <!--Content="Button"-->
            <!-- 
                <Button.Content>
                    <Image Source="{Binding ButtonImage}" Height="16" Width="16"/>
                </Button.Content> -->
        </StackPanel>
    </Grid>
</UserControl>
