<UserControl x:Class="NoNiDev.ArchipelagoParser.Views.SOHARView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoNiDev.ArchipelagoParser.Views"
             xmlns:vm="clr-namespace:NoNiDev.ArchipelagoParser.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:SOHARViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" ItemsSource="{Binding Title}" />

        <Label Content="API URL : " HorizontalAlignment="Left" Margin="19,10,0,0" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Width="150"/>
        <TextBox HorizontalAlignment="Left" Height="19" Margin="19,41,0,0" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="API URL" VerticalAlignment="Top" Width="150" Grid.ColumnSpan="2"/>


        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="39" Margin="61,40,0,0" Width="214"/>

    </Grid>
</UserControl>
