<UserControl x:Class="NoNiDev.ArchipelagoParser.Views.SOHARView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoNiDev.ArchipelagoParser.Views"
             xmlns:vm="clr-namespace:NoNiDev.ArchipelagoParser.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- d:DataContext="{d:DesignInstance Type={x:Type vm:SOHARViewModel_DesignTime}, IsDesignTimeCreatable = True}">-->
    <!--<d:DesignProperties.DataContext>
        <vm:SOHARViewModel_DesignTime />
    </d:DesignProperties.DataContext>-->
    <!--<d:UserControl.DataContext>
        <vm:SOHARViewModel>
            <vm:SOHARViewModel.Players>
                "Player1"
                "Player2"
                "Player3"
            </vm:SOHARViewModel.Players>
        </vm:SOHARViewModel>
    </d:UserControl.DataContext>-->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" ItemsSource="{Binding Players}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:SOHARPlayerLine HorizontalContentAlignment="Stretch" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label Content="API URL : " HorizontalAlignment="Left" Margin="19,10,0,0" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Width="150"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                 Text="{Binding ApiURL}" HorizontalAlignment="Left" Height="19" Margin="19,41,0,0"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="350" />

        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
            Text="{Binding RequestResponse}"
            HorizontalAlignment="Center"/>
        <Button Grid.Row="2" Grid.Column="0"
                Command="{Binding ButtonRC}" IsEnabled="{Binding IsEnabled}"
                Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="39" Margin="61,40,0,0" Width="214" Background="{Binding StringColor}"/>
    </Grid>
</UserControl>
